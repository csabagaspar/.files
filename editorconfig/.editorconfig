root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.js]
indent_style = space
indent_size = 2
max_line_length = 80

[*.json]
indent_style = space
indent_size = 2
max_line_length = 80

[*.{java, gradle}]
indent_style = tab
indent_size = 4
max_line_length = 150

[*.md]
trim_trailing_whitespace = false
